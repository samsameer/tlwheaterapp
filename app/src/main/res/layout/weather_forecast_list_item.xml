<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/top_color"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/day"
        android:text="@string/monday"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="20dp"
        style="@style/WeatherForecastListItemText" />

    <TextView
        android:id="@+id/description"
        android:text="@string/sky_is_clear"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:layout_weight="5"
        style="@style/WeatherForecastListItemText" />

    <TextView
        android:id="@+id/maximum_temperature"
        android:text="@string/nineteen_degrees"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        style="@style/WeatherForecastListItemTextEmphasis" />

    <TextView
        android:id="@+id/minimum_temperature"
        android:text="@string/fifteen_degrees"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        style="@style/WeatherForecastListItemTextDeEmphasis" />

</LinearLayout>